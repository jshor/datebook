{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "rollup.config.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}
